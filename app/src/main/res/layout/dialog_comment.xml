<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#ffff"
>
    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="评论"
            android:textColor="#9D9D9D	"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
    />
    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
    >
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/im_comment_uerName"
                android:layout_marginStart="5dp"
        />
        <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="165dp"
                android:layout_height="30dp"
                android:background="@drawable/edit_comment"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:id="@+id/ed_comment"
                android:hint="说点啥吧"
                tools:ignore="RtlSymmetry"
                android:textSize="12sp"
                android:drawableLeft="@mipmap/ic_category_audio"
                android:drawablePadding="10dp"
        android:paddingStart="5dp"
        />
        <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:id="@+id/btn_comment"
                android:background="@drawable/btn_commment"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:text="发送"
                android:textColor="#ffff"

        />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bangumi_home_index_sun_doll"
        android:layout_weight="1"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bangumi_home_index_sun_doll"
                android:layout_weight="1"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bangumi_home_index_sun_doll"
                android:layout_weight="1"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bangumi_home_index_sun_doll"
                android:layout_weight="1"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bangumi_home_index_sun_doll"
                android:layout_weight="1"
        />

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>