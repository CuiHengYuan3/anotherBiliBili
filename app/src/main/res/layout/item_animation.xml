<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="5dp"
        android:foreground="?android:attr/selectableItemBackground"

>
    <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
    >
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:id="@+id/im_item_animatoin"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:id="@+id/tv_title_animation"
                android:layout_margin="6dp"
                android:gravity="left"
                android:textColor="#272727"
                tools:ignore="RtlHardcoded"
                android:ellipsize="end"
                android:paddingLeft="2.5dp"
                android:paddingRight="2.5dp"
                android:paddingBottom="3.5dp"
                android:paddingTop="1.5dp"
                android:layout_below="@+id/im_item_animatoin"
        />
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_follower"
                android:layout_above="@+id/tv_title_animation"
                android:textColor="#ffff"
                android:layout_marginLeft="5dp"
        />
    </RelativeLayout>

</androidx.cardview.widget.CardView>