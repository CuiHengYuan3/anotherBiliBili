<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/toolbar_register"
            app:title="注册账号"
            app:navigationIcon="@mipmap/ic_arrow_back_black"

    >

    </androidx.appcompat.widget.Toolbar>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用手机号注册:"
            android:textSize="16dp"
            android:layout_below="@+id/toolbar_register"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_choice_phone"
            android:layout_marginLeft="5dp"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="手机号+86:"
            android:id="@+id/tv_phone"
            android:textSize="15sp"
            android:textColor="#272727"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_choice_phone"
            android:layout_marginStart="20dp"
            android:gravity="center"
    />


    <androidx.appcompat.widget.AppCompatEditText

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:layout_toRightOf="@+id/tv_phone"
            android:layout_alignBottom="@+id/tv_phone"
            android:id="@+id/ed_phone"
            android:inputType="number"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vertification_btn"
            android:layout_toRightOf="@+id/ed_phone"
            android:layout_alignBottom="@+id/tv_phone"
            android:id="@+id/btn_verification"
            android:text="获取验证码"
            android:textSize="12dp"
            android:layout_marginLeft="20dp"
    />


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="或者用户名注册:(强烈推荐，不浪费时间)"
            android:textSize="15sp"
            android:layout_below="@+id/ed_vertification"
            android:layout_marginTop="50dp"
            android:id="@+id/tv_choice_username"
            android:layout_marginLeft="5dp"
    />


    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="验证码:"
            android:id="@+id/tv_vertification"
            android:textSize="15sp"
            android:textColor="#272727"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tv_phone"
            android:layout_marginLeft="20dp"
            android:gravity="center"
    />
    <androidx.appcompat.widget.AppCompatEditText
            android:inputType="number"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:layout_toRightOf="@+id/tv_vertification"
            android:id="@+id/ed_vertification"
            android:layout_below="@+id/ed_phone"
            android:layout_alignBottom="@+id/tv_vertification"
            android:layout_marginTop="15dp"
    />

    <View android:layout_width="match_parent"
          android:layout_height="3dp"
          android:background="@color/colorPrimary"
          android:layout_below="@+id/ed_vertification"
          android:layout_marginTop="20dp"
    />


    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="用户名:"
            android:id="@+id/tv_userName"
            android:textSize="15sp"
            android:textColor="#272727"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tv_choice_username"
            android:layout_marginLeft="20dp"
            android:gravity="center"

    />
    <androidx.appcompat.widget.AppCompatEditText

            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:hint="请输入昵称"
            android:layout_toRightOf="@+id/tv_userName"
            android:id="@+id/ed_userName"
            android:layout_below="@+id/tv_choice_username"
            android:layout_alignBottom="@+id/tv_userName"
            android:layout_marginTop="30dp"

    />


    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="密码:"
            android:id="@+id/tv_password"
            android:textSize="15dp"
            android:textColor="#272727"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tv_userName"
            android:layout_marginLeft="20dp"
            android:gravity="center"
    />
    <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:layout_toRightOf="@+id/tv_password"
            android:id="@+id/ed_password"
            android:layout_below="@+id/ed_userName"
            android:layout_alignBottom="@+id/tv_password"
            android:layout_marginTop="15dp"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_below="@id/tv_password"
            android:background="#FF60AF"
            android:textColor="#ffff"
            android:id="@+id/btn_register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
    />


</RelativeLayout>