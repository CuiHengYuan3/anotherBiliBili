<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="color_buttom">@color/colorPrimary</item>
        <item name="color_nav_top">@color/colorPrimary</item>
        <item name="color_toolbar_edit">@color/colorAccent</item>

    </style>

    <style name="AppTheme_Green" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Green</item>
        <item name="colorPrimaryDark">@color/colorPrimary_Green</item>
        <item name="colorAccent">@color/colorAccent_Green</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="color_buttom">@color/colorPrimary_Green</item>
        <item name="color_nav_top">@color/colorPrimary_Green</item>
        <item name="color_toolbar_edit">@color/colorAccent_Green</item>

    </style>


    <style name="AppTheme_Bule" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Bule</item>
        <item name="colorPrimaryDark">@color/colorPrimary_Bule</item>
        <item name="colorAccent">@color/colorAccent_Bule</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="color_buttom">@color/colorPrimary_Bule</item>
        <item name="color_nav_top">@color/colorPrimary_Bule</item>
        <item name="color_toolbar_edit">@color/colorAccent_Bule</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="colorPrimary">@android:color/holo_blue_bright</item>-->
        <!--<item name="colorPrimaryDark">@android:color/holo_blue_bright</item>-->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="video_vertical_progressBar_My">
        <item name="android:maxWidth">12dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/video_volume_progress</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:minWidth">1dp</item>
    </style>
</resources>
